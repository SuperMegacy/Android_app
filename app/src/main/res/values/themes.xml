<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StudentApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Custom ripple attribute -->
        <item name="android:selectableItemBackground">@drawable/ripple</item>

        <!-- Material 3 color scheme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.StudentApp" parent="Base.Theme.StudentApp" />

    <!-- Keep your NoActionBar theme as fallback -->
    <style name="Theme.StudentApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:selectableItemBackground">@drawable/ripple</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>